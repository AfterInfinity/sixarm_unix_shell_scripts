#!/bin/bash

##
#
# Do apt-get commands to update the system:
#
#   * update
#   * upgrade with fix-missing and install-recommends
#   * autoremove with purge
#   * clean
#   * autoclean
##

apt-get update && apt-get upgrade -f --fix-missing --install-recommends && apt-get clean && apt-get autoclean && apt-get --purge autoremove
