
#!/bin/zsh
set -euf -o pipefail

##
# Run update commands for everything we use on all platforms.
#
#   * apt-get: for Debian systems
#   * softwareupdate: for OSX systems
#   * brew: for OSX Homebrew
#   * gem: for Ruby
#   * pip: for Python
#   * npm: for Node and Javascript
#
# Heuristics:
#
#   1. Update OS: `apt`, `softwareupdate`, etc.
#   2. Update OS package manager items: `apt`, `brew`, etc.
#   3. Update language-specific packages: `gem`, `pip`, `npm`, etc.
#   4. Update git repositories: `/opt`, `~/git`, etc.
#
# More to come. We welcome patches, pull requests, and ideas.
#
# Author: Joel Parker Henderson (joel@joelparkerhenderson.com)
# License: GPL
# Updated: 2015-06-01
##

# Apt for Debian Linux, Ubuntu Linux, etc.
if command -v apt-get >/dev/null 2>&1; then
    echo "update apt-get..."
    set -x
    sudo apt-get autoclean
    sudo apt-get --purge autoremove
    sudo apt-get update
    sudo apt-get upgrade -y -f --fix-missing --install-recommends
    sudo apt-get autoclean
    sudo apt-get --purge autoremove
    set +x
fi

# Software Update for OSX
if command -v softwareupdate >/dev/null 2>&1; then
    echo "update osx..."
    set -x
    softwareupdate --install --all
    set +x
fi

# Homebrew for OSX
if command -v brew >/dev/null 2>&1; then
    if [[ `whoami` != "root" ]]; then
        echo "update brew..."
        set -x
        brew update
        brew upgrade
        set +x
    fi
fi

# APM: Atom Package Manager
if command -v apm >/dev/null 2>&1; then
    echo "update apm"
    set -x
    apm upgrade
    set +x
fi

# Ruby Gems
if command -v gem >/dev/null 2>&1; then
    echo "update gem..."
    set -x
    gem update --system
    gem update
    set +x
fi

# Python pip
if command -v pip >/dev/null 2>&1; then
    echo "update pip..."
    set -x
    pip install --upgrade pip setuptools
    pip freeze --local | grep -v '^\-e' | cut -d = -f 1  | xargs -n1 pip install -U
    set +x
fi

# NPM: Node Package Manager
if command -v npm >/dev/null 2>&1; then
    echo "update npm..."
    set -x
    sudo npm cache clean -f
    sudo npm install -g n
    sudo n stable
    npm update -g
    npm update
    set +x
fi

# Git repositories in /opt and ~/git
if command -v git >/dev/null 2>&1; then
    echo "update git..."
    set -x
    find /opt ~/git -type d -name .git -perm -u=w | while read x; do cd $(dirname "$x") && git pull --rebase && git submodule update --init --recursive; done
    set +x
fi
