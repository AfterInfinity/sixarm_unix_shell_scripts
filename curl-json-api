#!/bin/bash
set -euf -o pipefail

##
# Use curl with headers that accept json and set content-type to json.
#
# Example:
#
#   curl-json-api \
#     -X POST \
#     -d '{"user":{"name":"Joe","email":"joe@example.com","password":"secret"}}' \
#     http://localhost:3000/api/users
#
# Example with authentication token demo:
#
#   curl-json-api \
#     -H "Authentication-Token: 12345678" \
#     -X POST \
#     -d '{"user":{"name":"Joe","email":"joe@example.com","password":"secret"}}' \
#
# Author: Joel Parker Henderson (joel@joelparkerhenderson.com)
# License: GPL
# Updated: 2015-01-25
##

curl -H "Accept: application/vnd.api+json" -H "Content-type: application/vnd.api+json" $@
